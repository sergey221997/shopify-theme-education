{% liquid
    assign d = section.settings.distance | times: 1.0
    assign s = section.settings.speed | times: 1.0
    assign t = section.settings.time | times: 1.0
%}

{% if d != nil and s != nil and d != 0 and s != 0 %}
    {% assign t = d | divided_by: s %}
{% elsif d != nil and t != nil and d != 0 and t != 0 %}
    {% assign s = d | divided_by: t %}  
{% elsif s != nil and t != nil and s != 0 and t != 0 %}
    {% assign d = s | times: t %}     
{% endif %} 

<h3>Расстояние - {{ d }} метров</h3>
<h3>Скорость - {{ s }} метров в секунду</h3>
<h3>Время - {{ t }} секунд</h3>

{% schema %}
    {
        "name": "Math exercise 1",
        "settings": [
            {
                "type": "number",
                "id": "distance",
                "label": "Расстояние в метрах"
            },
            {
                "type": "number",
                "id": "speed",
                "label": "Скорость в м/с"
            },
            {
                "type": "number",
                "id": "time",
                "label": "Время в секундах"
            }
        ],
        "presets": [
            {
                "name": "Math exercise 1"
            }
        ]
    }

{% endschema %}