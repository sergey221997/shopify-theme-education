{% render 'hero', blocks: section.blocks %}

{% schema %}
    {
        "name": "Rich-text",
        "blocks": [
            {
                "type": "heading",
                "name": "Heading",
                "settings": [
                    {
                        "type": "text",
                        "id": "text-title",
                        "label": "Heading",
                        "default": "Talk about your brand"
                    },
                    {
                        "type": "range",
                        "id": "font_size",
                        "label": "Heading font size",
                        "min": 10,
                        "max": 150,
                        "step": 10,
                        "unit": "px",
                        "default": 50
                    }
                ]
            },
            {
                "type": "subheading",
                "name": "Subheading",
                "settings": [
                    {
                        "type": "text",
                        "id": "subheading",
                        "label": "Subheading",
                        "default": "Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store."
                    }
                ]
            },
            {
                "type": "rich-text",
                "name": "Rich-text",
                "settings": [
                    {
                        "type": "richtext",
                        "id": "rich-text",
                        "label": "Rich-text"
                    }
                ]
            },
            {
                "type": "buttons",
                "name": "Buttons",
                "limit": 1,
                "settings": [
                    {
                      "type": "header",
                      "content": "Button #1"
                    },
                    {
                        "type": "text",
                        "id": "button_label1",
                        "label": "Label",
                        "default": "Shop now"
                    },
                    {
                        "type": "url",
                        "id": "button_link1",
                        "label": "Link"
                    },
                    {
                      "type": "header",
                      "content": "Button #2"
                    },
                    {
                        "type": "text",
                        "id": "button_label2",
                        "label": "Label",
                        "default": "Shop now"
                    },
                    {
                        "type": "url",
                        "id": "button_link2",  
                        "label": "Link"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Rich-text"
            }
        ]
    }
{% endschema %}