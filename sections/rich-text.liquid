{% render 'hero', blocks: section.blocks %}

{% schema %}
    {
        "name": "Rich-text",
        "blocks": [
            {
                "type": "heading",
                "name": "Heading",
                "settings": [
                    {
                        "type": "text",
                        "id": "text-title",
                        "label": "Heading",
                        "default": "Talk about your brand"
                    },
                    {
                        "type": "range",
                        "id": "font_size",
                        "label": "Heading font size",
                        "min": 10,
                        "max": 150,
                        "step": 10,
                        "unit": "px",
                        "default": 50
                    }
                ]
            },
            {
                "type": "subheading",
                "name": "Subheading",
                "settings": [
                    {
                        "type": "text",
                        "id": "subheading",
                        "label": "Subheading",
                        "default": "Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store."
                    }
                ]
            },
            {
                "type": "rich-text",
                "name": "Rich-text",
                "settings": [
                    {
                        "type": "richtext",
                        "id": "rich-text",
                        "label": "Rich-text"
                    }
                ]
            },
            {
                "type": "buttons",
                "name": "Buttons",
                "settings": [
                    {
                        "type": "text",
                        "id": "button_one_text",
                        "label": "Button one label",
                        "default": "Ckick here"
                    },
                    {
                        "type": "url",
                        "label": "Button one link",
                        "id": "button_one"
                    },
                    {
                        "type": "text",
                        "id": "button_two_text",
                        "label": "Button two label",
                        "default": "Click here" 
                    },
                    {
                        "type": "url",
                        "id": "button_two",  
                        "label": "Button two link"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Rich-text"
            }
        ]
    }
{% endschema %}