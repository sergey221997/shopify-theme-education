{% render 'exercise-10' %} 

{% assign my_array = section.settings.heading | split: "" %}
{% assign result = '' %}
{% assign every_fourth = 4 %}
{% assign every_fifth = 5 %}

{% for value in my_array %}
    {% assign remainder4 = forloop.index | modulo: every_fourth %}
    {% assign remainder5 = forloop.index | modulo: every_fifth %}
    
    {% if remainder4 == 0 %}
        {% assign modified_value = value | upcase %}
    {% elsif remainder5 == 0 %}
        {% assign modified_value = '_' %}
    {% else %}
        {% assign modified_value = value %}
    {% endif %}

    {% assign result = result | append: modified_value %}
{% endfor %}

{{ result }}

{% comment %} {% for value in my_array %}
    {% assign remainder4 = forloop.index | modulo: every_fourth %}
    {% assign remainder5 = forloop.index | modulo: every_fifth %}
    
    {% if remainder4 == 0 %}
        {% assign value = value | upcase %}
    {% elsif remainder5 == 0 %}
        {% assign value = '-' %}
    {% endif %}

    {% assign result = result | append: value %}
{% endfor %}

{{ result }} {% endcomment %}

